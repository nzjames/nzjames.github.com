---
permalink: /glitch.json
layout: false
eleventyExcludeFromCollections: true
---
{%- if theme === 'glitch' %}
{{ glitchMap}}
{
	"posts": [
{%- for page in collections.posts %}{% set absoluteUrl %}{{ page.url | htmlBaseUrl(metadata.url) }}{% endset %}
		{
			"title": "{{ page.data.title}}",
			"fileName": "{{  page.data.title | slugify }}",
			"pageUrl": "{{ page.url }}"
		}{% if not loop.last %},{% endif %}
{%- endfor %}
	]
}
{% endif %}

